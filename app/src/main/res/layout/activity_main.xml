<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="atmempresaconsultoria.livroandroid.com.contservice.MainActivity"
    android:background="#ffffff">



    //logomarca contservice
    <ImageView
        android:id="@+id/logoId"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo01"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp" />




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:onClick="browser1"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/icone01"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/logoId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="browser1"
        android:layout_gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Serviço 01"
        android:id="@+id/iconeId01"
        android:textAlignment="center"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:textColor="#030303"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="browser2"
        android:id="@+id/imageView2"
        android:src="@drawable/icone03"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp"
        android:layout_above="@+id/iconeId01"
        android:layout_alignRight="@+id/logoId"
        android:layout_alignEnd="@+id/logoId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Serviço 02"
        android:layout_toRightOf="@+id/imageView1"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:textColor="#030303"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="browser3"
        android:text="Serviço 03"
        android:id="@+id/imageView3"
        android:layout_marginTop="24dp"
        android:src="@drawable/icone05"
        android:layout_below="@+id/iconeId01"
        android:layout_alignRight="@+id/iconeId01"
        android:layout_alignEnd="@+id/iconeId01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Serviço 03"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:textColor="#030303"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="browser4"
        android:text="Serviço 04"
        android:id="@+id/imageView4"
        android:src="@drawable/icone04"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Serviço 04"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView4"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textColor="#030303"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_marginTop="30dp"
        android:src="@drawable/icone08"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quem Somos"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView5"
        android:layout_alignLeft="@+id/iconeId01"
        android:layout_alignStart="@+id/iconeId01"
        android:textColor="#030303"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:src="@drawable/icone09" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nossos Serviços"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignRight="@+id/logoId"
        android:layout_alignEnd="@+id/logoId"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:textColor="#030303"/>


</RelativeLayout>
